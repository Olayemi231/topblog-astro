---
import Layout from '../../layouts/Layout.astro';
import { getPostById, getCommentsByPost } from '../../lib/posts';

const { id } = Astro.params;
const user = Astro.locals.user;

if (!id) {
  return Astro.redirect('/');
}

const post = await getPostById(id);

if (!post) {
  return Astro.redirect('/404');
}

const comments = await getCommentsByPost(id);

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
  }).format(date);
}

function formatShortDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  }).format(date);
}

const successMessage = Astro.url.searchParams.get('success');
const errorMessage = Astro.url.searchParams.get('error');
---

<Layout title={post.title} description={post.excerpt}>
  <article class="max-w-4xl mx-auto px-4 py-12">
    <!-- Back Link -->
    <a href="/" class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors mb-8">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Home
    </a>

    <!-- Post Header -->
    <header class="mb-10">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight">
        {post.title}
      </h1>
      
      <div class="flex flex-wrap items-center gap-4 text-gray-400">
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center text-lg font-bold text-white">
            {post.author?.name?.charAt(0).toUpperCase() || 'A'}
          </div>
          <div>
            <p class="text-white font-medium">{post.author?.name || 'Anonymous'}</p>
            <p class="text-sm text-gray-500">{post.author?.email}</p>
          </div>
        </div>
        
        <div class="flex items-center gap-4 ml-auto text-sm">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            {formatShortDate(post.createdAt)}
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
            </svg>
            {comments.length} comments
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <div class="card p-8 mb-12">
      <div class="prose prose-invert prose-lg max-w-none">
        <div class="text-gray-300 leading-relaxed whitespace-pre-wrap">
          {post.content}
        </div>
      </div>
    </div>

    <!-- Edit/Delete Actions (for author or admin) -->
    {(user?.id === post.authorId || user?.role === 'admin') && (
      <div class="flex items-center gap-4 mb-12 p-4 bg-gray-800/30 rounded-xl border border-gray-700/50">
        <span class="text-gray-400 text-sm">Post Actions:</span>
        <a href={`/dashboard/edit/${post.id}`} class="btn-secondary text-sm py-2">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit Post
        </a>
      </div>
    )}

    <!-- Comments Section -->
    <section id="comments">
      <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
        <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
        </svg>
        Comments ({comments.length})
      </h2>

      <!-- Messages -->
      {successMessage && (
        <div class="mb-6 p-4 bg-green-500/10 border border-green-500/30 rounded-xl text-green-400">
          {successMessage}
        </div>
      )}
      {errorMessage && (
        <div class="mb-6 p-4 bg-red-500/10 border border-red-500/30 rounded-xl text-red-400">
          {errorMessage}
        </div>
      )}

      <!-- Comment Form -->
      {user ? (
        <form action="/api/comments/create" method="POST" class="mb-8">
          <input type="hidden" name="postId" value={post.id} />
          <div class="card p-6">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center text-sm font-bold text-white flex-shrink-0">
                {user.name.charAt(0).toUpperCase()}
              </div>
              <div class="flex-1">
                <textarea
                  name="content"
                  required
                  rows="3"
                  placeholder="Share your thoughts..."
                  class="input resize-none mb-4"
                ></textarea>
                <button type="submit" class="btn-primary">
                  Post Comment
                </button>
              </div>
            </div>
          </div>
        </form>
      ) : (
        <div class="card p-6 mb-8 text-center">
          <p class="text-gray-400 mb-4">Sign in to join the conversation</p>
          <a href={`/login?redirect=${encodeURIComponent(`/post/${post.id}#comments`)}`} class="btn-primary">
            Sign In to Comment
          </a>
        </div>
      )}

      <!-- Comments List -->
      {comments.length > 0 ? (
        <div class="space-y-4">
          {comments.map((comment) => (
            <div class="card p-6">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-gray-600 to-gray-700 flex items-center justify-center text-sm font-bold text-white flex-shrink-0">
                  {comment.user?.name?.charAt(0).toUpperCase() || 'A'}
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2 mb-2">
                    <span class="text-white font-medium">{comment.user?.name || 'Anonymous'}</span>
                    <span class="text-gray-500 text-sm">{formatDate(comment.createdAt)}</span>
                  </div>
                  <p class="text-gray-300 whitespace-pre-wrap">{comment.content}</p>
                  
                  {/* Delete button for comment owner or admin */}
                  {(user?.id === comment.userId || user?.role === 'admin') && (
                    <form action="/api/comments/delete" method="POST" class="mt-3" onsubmit="return confirm('Delete this comment?')">
                      <input type="hidden" name="commentId" value={comment.id} />
                      <input type="hidden" name="postId" value={post.id} />
                      <button type="submit" class="text-sm text-gray-500 hover:text-red-400 transition-colors">
                        Delete
                      </button>
                    </form>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="card p-8 text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gray-800 flex items-center justify-center">
            <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">No comments yet</h3>
          <p class="text-gray-400">Be the first to share your thoughts!</p>
        </div>
      )}
    </section>
  </article>
</Layout>
