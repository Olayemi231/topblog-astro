---
import Layout from '../../layouts/Layout.astro';
import { getPostsByAuthor } from '../../lib/posts';

const user = Astro.locals.user!;
const posts = await getPostsByAuthor(user.id);

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  }).format(date);
}

const successMessage = Astro.url.searchParams.get('success');
const errorMessage = Astro.url.searchParams.get('error');
---

<Layout title="Dashboard" description="Manage your blog posts">
  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 mb-8">
      <div>
        <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">
          Welcome, <span class="gradient-text">{user.name}</span>
        </h1>
        <p class="text-gray-400">Manage your blog posts and content</p>
      </div>
      <a href="/dashboard/new" class="btn-primary">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Post
      </a>
    </div>

    <!-- Messages -->
    {successMessage && (
      <div class="mb-6 p-4 bg-green-500/10 border border-green-500/30 rounded-xl text-green-400">
        {successMessage}
      </div>
    )}
    {errorMessage && (
      <div class="mb-6 p-4 bg-red-500/10 border border-red-500/30 rounded-xl text-red-400">
        {errorMessage}
      </div>
    )}

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
      <div class="card p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-primary-500/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <div>
            <p class="text-gray-400 text-sm">Total Posts</p>
            <p class="text-3xl font-bold text-white">{posts.length}</p>
          </div>
        </div>
      </div>
      
      <div class="card p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-accent-500/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
          </div>
          <div>
            <p class="text-gray-400 text-sm">Role</p>
            <p class="text-xl font-bold text-white capitalize">{user.role}</p>
          </div>
        </div>
      </div>
      
      <div class="card p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-green-500/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-gray-400 text-sm">Status</p>
            <p class="text-xl font-bold text-white">Active</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Posts Table -->
    <div class="card overflow-hidden">
      <div class="p-6 border-b border-gray-800/50">
        <h2 class="text-xl font-bold text-white">Your Posts</h2>
      </div>
      
      {posts.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="bg-gray-800/30">
                <th class="px-6 py-4 text-left text-sm font-medium text-gray-400">Title</th>
                <th class="px-6 py-4 text-left text-sm font-medium text-gray-400 hidden md:table-cell">Created</th>
                <th class="px-6 py-4 text-left text-sm font-medium text-gray-400 hidden md:table-cell">Updated</th>
                <th class="px-6 py-4 text-right text-sm font-medium text-gray-400">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-800/50">
              {posts.map((post) => (
                <tr class="hover:bg-gray-800/20 transition-colors">
                  <td class="px-6 py-4">
                    <a href={`/post/${post.id}`} class="text-white font-medium hover:text-primary-400 transition-colors">
                      {post.title}
                    </a>
                    <p class="text-gray-500 text-sm truncate max-w-xs mt-1">{post.excerpt}</p>
                  </td>
                  <td class="px-6 py-4 text-gray-400 text-sm hidden md:table-cell">
                    {formatDate(post.createdAt)}
                  </td>
                  <td class="px-6 py-4 text-gray-400 text-sm hidden md:table-cell">
                    {formatDate(post.updatedAt)}
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex items-center justify-end gap-2">
                      <a href={`/dashboard/edit/${post.id}`} class="p-2 text-gray-400 hover:text-white hover:bg-gray-700/50 rounded-lg transition-all" title="Edit">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      </a>
                      <form action="/api/posts/delete" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this post?')">
                        <input type="hidden" name="postId" value={post.id} />
                        <button type="submit" class="p-2 text-gray-400 hover:text-red-400 hover:bg-red-500/10 rounded-lg transition-all" title="Delete">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                          </svg>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      ) : (
        <div class="p-12 text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gray-800 flex items-center justify-center">
            <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">No posts yet</h3>
          <p class="text-gray-400 mb-6">Create your first post and start sharing your ideas!</p>
          <a href="/dashboard/new" class="btn-primary">Create Your First Post</a>
        </div>
      )}
    </div>
  </div>
</Layout>
