---
import Layout from '../../layouts/Layout.astro';
import { getAllPosts } from '../../lib/posts';
import { getAllUsers } from '../../lib/auth';

const user = Astro.locals.user!;
// Double check admin role in case middleware was bypassed
if (user.role !== 'admin') {
  return Astro.redirect('/');
}

const allPosts = await getAllPosts();
const allUsers = await getAllUsers();

const successMessage = Astro.url.searchParams.get('success');
const errorMessage = Astro.url.searchParams.get('error');

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  }).format(date);
}
---

<Layout title="Admin Dashboard">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="mb-10">
      <h1 class="text-4xl font-bold text-white mb-2">Admin <span class="gradient-text">Control Center</span></h1>
      <p class="text-gray-400">System-wide management of users and content</p>
    </div>

    {successMessage && (
      <div class="mb-6 p-4 bg-green-500/10 border border-green-500/30 rounded-xl text-green-400">
        {successMessage}
      </div>
    )}
    {errorMessage && (
      <div class="mb-6 p-4 bg-red-500/10 border border-red-500/30 rounded-xl text-red-400">
        {errorMessage}
      </div>
    )}

    <!-- Tabs Container -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Users Management -->
      <div class="lg:col-span-1">
        <div class="card overflow-hidden h-full">
          <div class="p-6 border-b border-gray-800/50 flex justify-between items-center">
            <h2 class="text-xl font-bold text-white">Users</h2>
            <span class="px-2 py-1 bg-gray-800 rounded text-xs text-gray-400">{allUsers.length} total</span>
          </div>
          <div class="divide-y divide-gray-800/50 max-h-[600px] overflow-y-auto">
            {allUsers.map((u) => (
              <div class="p-4 hover:bg-gray-800/20 transition-colors">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-full bg-gray-700 flex items-center justify-center text-xs font-bold text-white">
                      {u.name.charAt(0).toUpperCase()}
                    </div>
                    <div>
                      <p class="text-white text-sm font-medium">{u.name}</p>
                      <p class="text-gray-500 text-xs">{u.email}</p>
                    </div>
                  </div>
                  <span class={`px-2 py-0.5 rounded-full text-[10px] uppercase font-bold ${u.role === 'admin' ? 'bg-accent-500/20 text-accent-400 border border-accent-500/30' : 'bg-gray-700 text-gray-400'}`}>
                    {u.role}
                  </span>
                </div>
                <div class="flex justify-end gap-3 items-center">
                  {u.id !== user.id && (
                    <>
                      <form action="/api/admin/update-role" method="POST" class="inline">
                        <input type="hidden" name="userId" value={u.id} />
                        <input type="hidden" name="role" value={u.role === 'admin' ? 'user' : 'admin'} />
                        <button type="submit" class={`text-xs font-medium transition-colors ${u.role === 'admin' ? 'text-orange-400 hover:text-orange-300' : 'text-accent-400 hover:text-accent-300'}`}>
                          {u.role === 'admin' ? 'Demote to User' : 'Promote to Admin'}
                        </button>
                      </form>
                      <form action="/api/admin/delete-user" method="POST" onsubmit="return confirm('Are you sure you want to delete this user and all their data?')" class="inline">
                        <input type="hidden" name="userId" value={u.id} />
                        <button type="submit" class="text-xs text-red-500/70 hover:text-red-400 transition-colors">Delete</button>
                      </form>
                    </>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Posts Management -->
      <div class="lg:col-span-2">
        <div class="card overflow-hidden h-full">
          <div class="p-6 border-b border-gray-800/50 flex justify-between items-center">
            <h2 class="text-xl font-bold text-white">All Blog Posts</h2>
            <span class="px-2 py-1 bg-gray-800 rounded text-xs text-gray-400">{allPosts.length} total</span>
          </div>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="bg-gray-800/30">
                  <th class="px-6 py-4 text-left text-sm font-medium text-gray-400">Post</th>
                  <th class="px-6 py-4 text-left text-sm font-medium text-gray-400">Author</th>
                  <th class="px-6 py-4 text-left text-sm font-medium text-gray-400">Date</th>
                  <th class="px-6 py-4 text-right text-sm font-medium text-gray-400">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-800/50">
                {allPosts.map((post) => (
                  <tr class="hover:bg-gray-800/20 transition-colors">
                    <td class="px-6 py-4">
                      <a href={`/post/${post.id}`} class="text-white font-medium hover:text-primary-400 line-clamp-1">
                        {post.title}
                      </a>
                    </td>
                    <td class="px-6 py-4 text-gray-400 text-sm">
                      {post.author?.name || 'Deleted User'}
                    </td>
                    <td class="px-6 py-4 text-gray-400 text-sm">
                      {formatDate(post.createdAt)}
                    </td>
                    <td class="px-6 py-4">
                      <div class="flex items-center justify-end gap-3">
                        <a href={`/dashboard/edit/${post.id}`} class="text-primary-400 hover:text-primary-300 text-xs">Edit</a>
                        <form action="/api/posts/delete" method="POST" class="inline">
                          <input type="hidden" name="postId" value={post.id} />
                          <button type="submit" class="text-red-400 hover:text-red-300 text-xs" onclick="return confirm('Delete this post?')">Delete</button>
                        </form>
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
            {allPosts.length === 0 && (
              <div class="p-10 text-center text-gray-500">No posts found in the system.</div>
            )}
          </div>
        </div>
      </div>

    </div>
  </div>
</Layout>
