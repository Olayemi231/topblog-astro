---
import Layout from '../layouts/Layout.astro';
import { getLatestPosts } from '../lib/posts';

const posts = await getLatestPosts(5);
const user = Astro.locals.user;

// Format date helper
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
}
---

<Layout title="Home" description="Discover the latest blog posts from our community">
  <!-- Hero Section -->
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl md:text-7xl font-extrabold mb-6">
        Welcome to <span class="gradient-text">TopBlog</span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-400 mb-8 max-w-2xl mx-auto">
        A modern blogging platform where ideas come to life. Share your thoughts, 
        connect with readers, and build your audience.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        {user ? (
          <a href="/dashboard/new" class="btn-primary text-lg px-8 py-3">
            Create Your First Post
          </a>
        ) : (
          <>
            <a href="/register" class="btn-primary text-lg px-8 py-3">
              Get Started Free
            </a>
            <a href="/login" class="btn-secondary text-lg px-8 py-3">
              Sign In
            </a>
          </>
        )}
      </div>
    </div>
  </section>

  <!-- Latest Posts Section -->
  <section class="py-16 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="flex items-center justify-between mb-10">
        <h2 class="text-3xl md:text-4xl font-bold text-white">
          Latest <span class="gradient-text">Posts</span>
        </h2>
      </div>

      {posts.length > 0 ? (
        <div class="grid gap-8">
          <!-- Featured Post (First Post) -->
          {posts.length > 0 && (
            <a href={`/post/${posts[0].id}`} class="group">
              <article class="card p-8 hover:border-primary-500/50 transition-all duration-300 group-hover:shadow-primary-500/10">
                <div class="flex flex-col md:flex-row gap-6">
                  <div class="flex-1">
                    <div class="flex items-center gap-3 mb-4">
                      <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center text-sm font-bold text-white">
                        {posts[0].author?.name?.charAt(0).toUpperCase() || 'A'}
                      </div>
                      <div>
                        <p class="text-white font-medium">{posts[0].author?.name || 'Anonymous'}</p>
                        <p class="text-gray-500 text-sm">{formatDate(posts[0].createdAt)}</p>
                      </div>
                      <span class="ml-auto px-3 py-1 bg-primary-500/20 text-primary-400 text-sm rounded-full border border-primary-500/30">
                        Featured
                      </span>
                    </div>
                    <h3 class="text-2xl md:text-3xl font-bold text-white mb-3 group-hover:text-primary-400 transition-colors">
                      {posts[0].title}
                    </h3>
                    <p class="text-gray-400 text-lg leading-relaxed">
                      {posts[0].excerpt}
                    </p>
                    <div class="mt-6 flex items-center gap-2 text-primary-400 font-medium">
                      Read More
                      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </div>
                  </div>
                </div>
              </article>
            </a>
          )}

          <!-- Other Posts Grid -->
          {posts.length > 1 && (
            <div class="grid md:grid-cols-2 gap-6">
              {posts.slice(1).map((post) => (
                <a href={`/post/${post.id}`} class="group">
                  <article class="card p-6 h-full hover:border-primary-500/50 transition-all duration-300 group-hover:shadow-primary-500/10">
                    <div class="flex items-center gap-3 mb-4">
                      <div class="w-8 h-8 rounded-full bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center text-xs font-bold text-white">
                        {post.author?.name?.charAt(0).toUpperCase() || 'A'}
                      </div>
                      <div class="flex-1 min-w-0">
                        <p class="text-gray-300 text-sm truncate">{post.author?.name || 'Anonymous'}</p>
                        <p class="text-gray-500 text-xs">{formatDate(post.createdAt)}</p>
                      </div>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-2 group-hover:text-primary-400 transition-colors line-clamp-2">
                      {post.title}
                    </h3>
                    <p class="text-gray-400 line-clamp-3">
                      {post.excerpt}
                    </p>
                    <div class="mt-4 flex items-center gap-2 text-primary-400 text-sm font-medium">
                      Read More
                      <svg class="w-3 h-3 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </div>
                  </article>
                </a>
              ))}
            </div>
          )}
        </div>
      ) : (
        <div class="card p-12 text-center">
          <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-gray-800 flex items-center justify-center">
            <svg class="w-10 h-10 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">No Posts Yet</h3>
          <p class="text-gray-400 mb-6">Be the first to share something amazing!</p>
          {user ? (
            <a href="/dashboard/new" class="btn-primary">Create Your First Post</a>
          ) : (
            <a href="/register" class="btn-primary">Sign Up to Start Writing</a>
          )}
        </div>
      )}
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 px-4 border-t border-gray-800/50">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-white text-center mb-12">
        Why Choose <span class="gradient-text">TopBlog</span>?
      </h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="card p-8 text-center group hover:border-primary-500/50 transition-all">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-primary-500/20 to-accent-500/20 flex items-center justify-center group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Lightning Fast</h3>
          <p class="text-gray-400">Built with Astro for blazing-fast performance and optimal user experience.</p>
        </div>
        
        <div class="card p-8 text-center group hover:border-primary-500/50 transition-all">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-primary-500/20 to-accent-500/20 flex items-center justify-center group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Secure</h3>
          <p class="text-gray-400">Enterprise-grade security with hashed passwords and protected routes.</p>
        </div>
        
        <div class="card p-8 text-center group hover:border-primary-500/50 transition-all">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-primary-500/20 to-accent-500/20 flex items-center justify-center group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Community</h3>
          <p class="text-gray-400">Engage with readers through comments and build your audience.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
